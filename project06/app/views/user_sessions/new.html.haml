%h1 Login

= form_for @user_session do |f|
  - if @user_session.errors.any?
    #error_explanation
      %h2 There were errors
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg
  #field
    = f.label :username
    = f.text_field :username
  #field
    = f.label :password
    = f.password_field :password
  #field
    = f.check_box :remember_me
    = f.label :remember_me
  #actions
    = f.submit "Login"
